        <h2>Add New Employee</h2>
        <hr />
        <form action="/create" method="POST">
          <div class="form-horizontal">
            <div class="form-group">
              <label class="control-label col-md-2">Employee Id</label>
              <div class="col-md-3">
                <input type="text" name="id" class="form-control" />
              </div>
            </div>
